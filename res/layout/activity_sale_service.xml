<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/sale_logo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/boway_sale_logo_height"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/sale_service_tab_height"
        android:background="@color/sale_service_tab_bg"
        android:orientation="horizontal">
        
        <TextView 
            android:id="@+id/service_mode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/sale_text_color"
            android:textSize="18sp"
            android:text="@string/service_mode_text"/>
        
        
    </LinearLayout>	
    
    <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0" />

</LinearLayout>